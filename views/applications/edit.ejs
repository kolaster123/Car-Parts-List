<!-- views/applications/edit.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editing <%= application.title %></title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>Edit <%= application.title %> at <%= application.company %></h1>
  <form 
    action="/users/<%= user._id %>/applications/<%= application._id %>?_method=PUT"
    method="POST"
  >
    <label for="name">Name:</label>
    <input type="text" name="name" id="title" value="<%= application.name %>">
    <label for="price">Price:</label>
    <input type="text" name="price" id="title" value="<%= application.price %>">
    <label for="link">Link:</label>
    <input 
      type="text" 
      name="link" 
      id="link" 
      value="<%= application.link %>"
    >
    <label for="status">Status:</label>
    <select id="status" name="status">
      <option 
        value="got it" 
        <%= application.status === "Got it!" ? "selected" : "" %>
      >
        Interested
      </option>
      <option 
        value="dont got it" 
        <%= application.status === "Dont't got it!" ? "selected" : "" %>
      >
        Applied
      </option>
      <option 
        value="saving up" 
        <%= application.status === "Saving up!" ? "selected" : "" %> 
        >
      </option>
    </select>
    <button type="submit">Update Application</button>
  </form>
</body>
</html>
